/* pages/virtualCamera/virtualCamera.wxss */
page {  
    display: block;  
    min-height: 100%;  
    background-color: #000;  
}

.container {
    width: 100%;
    height: auto;
    margin: 0;
    padding: 0;
    background-color: #000;
    overflow: hidden;
}

.camera-box {
    width: 100%;
    height: 920rpx;
}

.camera-alter {
    width: 100%;
    height: 920rpx;
    overflow: visible;
    z-index: 9;
}

.camera-cover {
    width: 100%;
    height: 760rpx;
    padding-top: 450rpx;
    background-color: rgba(211, 211, 211, .6);
}

.camera-scope-container {
    display: flex;
    flex-flow: row wrap;
    background-color: #fff;
    width: 84%;
    margin: 0 auto;
    border-radius: 8rpx;
    text-align: center;
}

.camera-scope-container text {
    width: 100%;
    height: 200rpx;
    line-height: 200rpx;
}

.camera-scope-container button {
    width: 50%;
    height: 100rpx;
    background-color: #fff;
    border-top: 2rpx solid #ccc;
    border-radius: 0;
}

.camera-scope-container button:after, .camera-scope-container button:before {
    border: none;
}

.camera-scope-container button:nth-child(2) {
    border-bottom-left-radius: 8rpx;
    border-right: 2rpx solid #ccc;
}
.camera-scope-container button:last-child {
    color: #4DC463;
    border-bottom-right-radius: 8rpx;
}


.camera-type {
    width: 100%;
    height: 64rpx;
    color: #fff;
    padding: 24rpx 0 6rpx 0;
}

.camera-text {
    display: inline-block;
    height: 44rpx;
    width: 250rpx;
    text-align: center;
    font-size: 16px;
    line-height: 44rpx;
}

.active {
    color: #e31d1a;
    position: relative;
}

.active:after {
    content: '';
    display: inline-block;
    position: absolute;
    left: 50%;
    bottom: -8rpx;
    width: 8rpx;
    height: 8rpx;
    margin-left: -4rpx;
    border-radius: 50%;
    background-color: #e31d1a;
}

.camera-footer {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 90%;
    margin: 0 auto;
}

.camera-album {
    width: 100rpx;
    height: 100rpx;
    border-radius: 8rpx;
}

.camera-shot-container {
    position: relative;
    width: 132rpx;
    height: 132rpx;
    margin: 0 auto;
}

.camera-shot-outer {
    width: 112rpx;
    height: 112rpx;
    border: 10rpx solid #fff;
    border-radius: 50%;
}

.camera-shot-inner {
    position: absolute;
    width: 104rpx;
    height: 104rpx;
    top: 14rpx;
    right: 14rpx;
    bottom: 14rpx;
    left: 14rpx;
    border-radius: 50%;
    background-color: #fff;
}

.camera-shoting {
    animation: shoting .1s ease-in-out;
}

