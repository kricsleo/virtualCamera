.camera-reverse-hover {
    animation: reversingCamera .1s ease-in-out;
}

.camera-scope {
    width: 90%;
    margin: 0 auto;
    border-radius: 8rpx;
    background-color: #69CD7D;
}

.camera-scope-hover {
    background-color: #4DC463;
}

@keyframes shoting {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(0.9);
    }
}

@keyframes reversingCamera {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: .4;
    }
}